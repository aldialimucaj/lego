<Controls:MetroWindow x:Class="Lego.LegoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:Lego"
        xmlns:vm="clr-namespace:Lego.ViewModels"
        xmlns:v="clr-namespace:Lego.Views"
        xmlns:m="clr-namespace:Lego.Models"
        xmlns:o="clr-namespace:Lego.Other"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="LegoWindow" Height="300" Width="400">
    <Window.Resources>
        <vm:LegoViewModel x:Key="legoViewModel" />
        <v:MainPage x:Key="mainPage"/>
    </Window.Resources>
    <DockPanel>
        <Frame x:Name="_mainFrame" Source="/Lego;component/Views/MainPage.xaml"/>
    </DockPanel>

</Controls:MetroWindow>
